[close_icon]
type=graphic
width=26
height=23
xmode=abs_centre
ymode=abs_centre
layer=close
graphic="close_buttons,2"

[close]
type=layer
x=2
y=20
width=32
height=33
xmode=abs_right
layer=background
events=2
op1=Close
onmouseover=graphic_swapper(lovaquest_locks:close_icon, "close_buttons,3")
onmouseleave=graphic_swapper(lovaquest_locks:close_icon, "close_buttons,2")
onop=closebutton_click

[content]
