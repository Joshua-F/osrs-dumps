width=362
height=208
xmode=abs_centre
ymode=abs_centre
layer=universe

[text]
type=layer
height=62
widthmode=minus
xmode=abs_centre
layer=content

[text_box]
type=text
width=12
height=2
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=text
textfont=q8_full
text=Worthiness is hard to find. However, the one who restores my great tower to its former glory, will be worthy of my legendary hammer.
textalignh=1
textalignv=1
textshadow=yes
colour=0xffc184

