[universe]
type=layer
widthmode=minus
heightmode=minus
onload=inferno_hud_init(inferno_hp_hud:dodger, inferno_hp_hud:hp, inferno_hp_hud:name_area, inferno_hp_hud:hp_bar_text, inferno_hp_hud:health_bar_remaining, inferno_hp_hud:creature_name)

[dodger]
type=layer
widthmode=minus
heightmode=minus
layer=universe

[hp]
type=layer
width=300
height=38
layer=dodger

[name_area]
type=layer
width=80
height=18
layer=hp
onload=thinbox(event_com)

[name_backing]
type=graphic
width=4
height=4
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=name_area
graphic=tradebacking
tiling=yes

[creature_name]
type=text
x=10
widthmode=minus
heightmode=minus
ymode=abs_centre
layer=name_area
textfont=p11_full
text=TzKal-Zuk
textalignh=left
textalignv=centre
textshadow=yes
colour=0xff981f

[hp_bar]
type=layer
height=20
widthmode=minus
xmode=abs_centre
ymode=abs_bottom
layer=hp
onload=thinbox(event_com)

[health_bar_back]
type=rectangle
width=4
height=4
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=hp_bar
colour=0xcc0000
fill=yes

[health_bar_remaining]
type=rectangle
x=2
width=4
height=4
widthmode=minus
heightmode=minus
ymode=abs_centre
layer=hp_bar
colour=0x00cc00
fill=yes

[hp_bar_text]
type=text
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=hp_bar
textfont=p11_full
text=- / -
textalignh=centre
textalignv=centre
colour=0x000000

