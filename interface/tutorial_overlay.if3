[universe]
type=layer
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
onload=tutorial_progressbar_init(event_com, tutorial_overlay:dodger_top, tutorial_overlay:dodger_bottom, tutorial_overlay:hint_layer, tutorial_overlay:progressbar_container, tutorial_overlay:progressbar)

[noclick]
