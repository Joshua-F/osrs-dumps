[universe]
type=layer
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
onload=soul_wars_lobby_hud_init(soul_wars_lobby:dodger, soul_wars_lobby:content)

[dodger]
type=layer
widthmode=minus
heightmode=minus
layer=universe

[content]
type=layer
x=2
y=2
width=129
height=82
layer=dodger
onload=stonepanel(event_com, -1)

[content_background]
type=graphic
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=content
graphic=tradebacking
tiling=yes
trans=80

[players]
type=layer
y=7
width=4
height=33
widthmode=minus
xmode=abs_centre
layer=content

[players_title]
type=text
height=16
widthmode=minus
xmode=abs_centre
layer=players
textfont=p12_full
text=Players Waiting
textalignh=1
textalignv=1
textshadow=yes
colour=0xffa53d

[players_text]
type=text
height=16
widthmode=minus
xmode=abs_centre
ymode=abs_bottom
layer=players
textfont=p12_full
text=0
textalignh=1
textalignv=1
textshadow=yes
colour=0xffa53d

[time]
type=layer
y=6
width=4
height=33
widthmode=minus
xmode=abs_centre
ymode=abs_bottom
layer=content

[time_title]
type=text
height=16
widthmode=minus
xmode=abs_centre
layer=time
textfont=p12_full
text=Next Game Start
textalignh=1
textalignv=1
textshadow=yes
colour=0xffa53d

[time_text]
type=text
height=16
widthmode=minus
xmode=abs_centre
ymode=abs_bottom
layer=time
textfont=p12_full
text=-
textalignh=1
textalignv=1
textshadow=yes
colour=0xffa53d

