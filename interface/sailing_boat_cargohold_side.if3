ymode=abs_centre
layer=warning
colour=0x808080
fill=yes
trans=210

[com_4]
type=rectangle
width=4
height=4
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=warning
colour=0x808080
fill=yes
trans=210

[messagecontainer]
type=layer
width=155
height=150
xmode=abs_centre
ymode=abs_centre
layer=warning
onload=steelbox(event_com)

[com_6]
type=graphic
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
