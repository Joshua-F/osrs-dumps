[text]
type=text
y=10
width=20
height=50
widthmode=minus
heightmode=minus
xmode=abs_centre
layer=messagecontainer
textfont=p12_full
text=Items deposited here may be retrieved by <col=ffff00>other crewmates</col>, and are considered to be <col=ffff00>possessions of the captain</col>.
textalignh=1
textalignv=1
textshadow=yes
colour=0xffffff

[dismiss]
type=layer
y=10
width=100
height=30
xmode=abs_centre
