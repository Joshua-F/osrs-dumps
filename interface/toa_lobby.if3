[universe]
type=layer
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
onload=toa_lobby_hud_init(toa_lobby:dodger, toa_lobby:content, toa_lobby:names_header)

[dodger]
type=layer
widthmode=minus
heightmode=minus
layer=universe

[content]
type=layer
x=2
y=2
width=124
height=151
layer=dodger
onload=stonepanel(event_com, -1)

[content_background]
type=graphic
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=content
graphic=tradebacking
tiling=yes
trans=80

[names_header]
type=text
y=4
width=8
height=20
widthmode=minus
xmode=abs_centre
layer=content
textfont=b12_full
textalignh=1
textalignv=1
textshadow=yes
colour=0xff981f

[names]
type=text
y=4
width=8
height=28
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_bottom
layer=content
textfont=p12_full
textlineheight=15
textalignh=1
textalignv=1
textshadow=yes
colour=0xff981f

