[universe]
type=layer
width=16384
height=16384
widthmode=rel
heightmode=rel
onload=dt2_survival_init(dt2_survival:dodger, dt2_survival:overlay)

[fade]
type=layer
widthmode=minus
heightmode=minus
layer=universe
hide=yes

[fader]
type=rectangle
widthmode=minus
heightmode=minus
layer=fade
colour=0x000000
fill=yes

[dodger]
type=layer
widthmode=minus
heightmode=minus
layer=universe

[overlay]
type=layer
x=8
y=5
width=130
height=79
layer=dodger

[time]
type=layer
width=16383
height=16384
widthmode=rel
heightmode=rel
layer=overlay

[time_title]
type=text
height=26
widthmode=minus
layer=time
textfont=b12_full
text=Protect Kasonde
textalignh=centre
textalignv=centre
textshadow=yes
colour=0xff981f

[time_text]
type=text
width=84
height=26
xmode=abs_centre
ymode=abs_bottom
layer=time
textfont=p12_full
text=Time Left: 0:00
textalignh=left
textalignv=centre
textshadow=yes
colour=0xffffff

[health_bar]
type=layer
height=26
widthmode=minus
ymode=abs_centre
layer=time
onload=thinbox(event_com)

[health_bar_background]
type=rectangle
widthmode=minus
heightmode=minus
layer=health_bar
colour=0xcf0000
fill=yes

[health_bar_foreground]
type=rectangle
widthmode=minus
heightmode=minus
layer=health_bar
colour=0x00a501
fill=yes

[health_bar_foreground_shine]
type=rectangle
height=8192
widthmode=minus
heightmode=rel
layer=health_bar
colour=0xffffff
fill=yes
trans=183

[health_percentage]
type=text
y=1
width=55
height=13
xmode=abs_centre
ymode=abs_centre
layer=health_bar
textfont=p11_full
text=100%
textalignh=centre
textalignv=centre
textshadow=yes
colour=0xffffff

[com_13]
type=rectangle
x=1
y=1
width=2
height=2
xmode=abs_right
ymode=abs_bottom
layer=health_bar
colour=0x474745
fill=yes

[com_14]
type=rectangle
x=1
y=1
width=2
height=2
xmode=abs_right
layer=health_bar
colour=0x474745
fill=yes

[com_15]
type=rectangle
x=1
y=1
width=2
height=2
ymode=abs_bottom
layer=health_bar
colour=0x474745
fill=yes

[com_16]
type=rectangle
x=1
y=1
width=2
height=2
layer=health_bar
colour=0x474745
fill=yes

