[universe]
type=layer
width=340
height=320
xmode=abs_centre
ymode=abs_centre
onload=pvpa_reward_shop_init(event_com, pvp_arena_rewards:total, pvp_arena_rewards:options, pvp_arena_rewards:scrollbar, pvp_arena_rewards:confirm, pvp_arena_rewards:buttongfx)

[frame]
type=layer
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=universe
onload=steelborder(event_com, "PvP Arena Rewards")

[options_container]
type=layer
y=50
width=20
height=90
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_bottom
layer=universe
onload=thinbox(event_com)

[options]
type=layer
x=2
width=20
height=4
widthmode=minus
heightmode=minus
ymode=abs_centre
layer=options_container

[scrollbar]
type=layer
x=2
width=16
height=4
heightmode=minus
xmode=abs_right
ymode=abs_centre
layer=options_container

[bottom]
type=layer
y=10
width=20
height=35
widthmode=minus
xmode=abs_centre
ymode=abs_bottom
layer=universe

[total]
type=text
width=150
heightmode=minus
ymode=abs_centre
layer=bottom
textfont=p12_full
textalignh=1
textalignv=1
textshadow=yes
colour=0xff981f

[confirm]
type=layer
width=155
widthmode=minus
heightmode=minus
xmode=abs_right
ymode=abs_centre
layer=bottom

[buttongfx]
type=layer
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=confirm

[popup]
type=layer
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=universe
hide=yes

