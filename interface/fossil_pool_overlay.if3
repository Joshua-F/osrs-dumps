[universe]
type=layer
widthmode=minus
heightmode=minus
onload=fossil_pool_overlay_init(fossil_pool_overlay:dodger, fossil_pool_overlay:content)

[dodger]
type=layer
widthmode=minus
heightmode=minus
layer=universe

[content]
type=layer
x=8
width=100
height=100
ymode=abs_centre
layer=dodger

[process_layer]
type=layer
width=100
height=30
layer=content

[calcium_layer]
type=layer
width=100
height=30
ymode=abs_centre
layer=content

[phosphate_layer]
type=layer
width=100
height=30
ymode=abs_bottom
layer=content

[calcium_text]
type=text
height=15
widthmode=minus
layer=calcium_layer
textfont=p11_full
text=Calcium Added:
textshadow=yes
colour=0xff981f

[calcium_bar_container]
type=layer
height=15
widthmode=minus
ymode=abs_bottom
layer=calcium_layer

[fill2]
type=rectangle
widthmode=minus
heightmode=minus
layer=calcium_bar_container
colour=0x666666
fill=yes

[calcium_bar]
type=rectangle
width=30
heightmode=minus
layer=calcium_bar_container
colour=0xffff33
fill=yes

[border2]
