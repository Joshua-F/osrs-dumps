[universe]
type=layer
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre

[clamp]
type=layer
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=universe

[fader]
type=rectangle
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=clamp
colour=0x000000
fill=yes
trans=255

[window]
type=layer
width=200
height=200
xmode=abs_centre
ymode=abs_centre
layer=clamp

[frame]
type=layer
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=window

[container]
type=layer
y=10
width=20
height=20
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_bottom
layer=window
onload=thinbox(event_com)

[body]
type=layer
height=21
widthmode=minus
heightmode=minus
xmode=abs_centre
layer=container

[text]
type=text
height=21
widthmode=minus
xmode=abs_centre
ymode=abs_bottom
layer=container
textfont=p12_full
textalignh=1
textalignv=1
textshadow=yes
colour=0xffffff

