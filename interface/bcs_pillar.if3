[universe]
type=layer
width=512
height=334
xmode=abs_centre
ymode=abs_centre
onload=bcs_pillar_init(bcs_pillar:rotate_clockwise, bcs_pillar:rotate_anticlockwise, bcs_pillar:confirm, bcs_pillar:emblem)

[contents]
type=layer
width=414
height=304
xmode=abs_centre
ymode=abs_centre
layer=universe

[frame]
type=layer
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=contents
onload=steelbox_background(event_com)

[main]
type=layer
width=12
height=12
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=contents

[pillar]
type=model
x=-5
y=26
width=32
height=32
xmode=abs_centre
ymode=abs_centre
layer=main
model=model_44203
modeloriginy=124
modelzoom=160

[emblem]
type=model
width=32
height=32
xmode=abs_centre
ymode=abs_centre
layer=main
model=model_44767
modelanglex=512
modelangley=2047
modelzoom=270
modelorthog=yes

[text]
type=text
x=1
y=-108
width=191
height=40
widthmode=minus
xmode=abs_centre
ymode=abs_centre
layer=main
textfont=q8_full
text=The scarabs make their homes in the great halls below.
textalignh=centre
textalignv=centre
textshadow=yes
colour=0xffedb2

[rotate_clockwise]
type=layer
x=12
width=40
height=92
ymode=abs_centre
layer=main
events=2
op1=*

[rotate_anticlockwise]
type=layer
x=12
width=40
height=92
xmode=abs_right
ymode=abs_centre
layer=main
events=2
op1=*

[confirm]
type=layer
y=12
width=102
height=40
xmode=abs_centre
ymode=abs_bottom
layer=main
events=2
op1=*

[close]
type=graphic
x=3
y=6
width=26
height=23
xmode=abs_right
layer=contents
onload=steelborder_closebutton(event_com, "Close")
