[universe]
type=layer
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
onload=raids_storage_side_init(event_com, raids_storage_side:warning, raids_storage_side:text, raids_storage_side:dismiss, raids_storage_side:items)

[items]
type=layer
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=universe

[warning]
type=layer
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=universe
noclickthrough=yes

[com_3]
type=rectangle
width=2
height=2
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=warning
colour=0x808080
fill=yes
trans=210

[com_4]
type=rectangle
width=4
height=4
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=warning
colour=0x808080
fill=yes
trans=210

[messagecontainer]
type=layer
width=155
height=150
xmode=abs_centre
ymode=abs_centre
layer=warning
onload=steelbox(event_com)

[com_6]
type=graphic
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=messagecontainer
graphic=tradebacking_light
tiling=yes

[text]
type=text
y=10
width=20
height=50
widthmode=minus
heightmode=minus
xmode=abs_centre
layer=messagecontainer
textfont=p12_full
text=Items donated here may be retrieved by <col=ff0000>other</col> party-members, or <col=ff0000>may be lost</col> if the party dissolves.
textalignh=1
textalignv=1
textshadow=yes
colour=0xffffff

[dismiss]
type=layer
y=10
width=100
height=30
xmode=abs_centre
ymode=abs_bottom
layer=messagecontainer
events=2
op1=Dismiss

