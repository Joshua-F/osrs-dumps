[universe]
type=layer
width=398
height=300
xmode=abs_centre
ymode=abs_centre
onload=gravestone_retrieval_init(event_com, gravestone_retrieval:frame, gravestone_retrieval:items, gravestone_retrieval:scrollbar, gravestone_retrieval:button, gravestone_retrieval:button_gfx, gravestone_retrieval:discard, gravestone_retrieval:discard_gfx, gravestone_retrieval:info, gravestone_retrieval:fee)

[frame]
type=layer
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=universe

[items_container]
type=layer
y=40
width=20
height=90
widthmode=minus
heightmode=minus
xmode=abs_centre
layer=universe
onload=thinbox(event_com)

[items]
type=layer
x=2
width=20
height=4
widthmode=minus
heightmode=minus
ymode=abs_centre
layer=items_container

[scrollbar]
type=layer
x=2
width=16
height=4
heightmode=minus
xmode=abs_right
ymode=abs_centre
layer=items_container

[bottom]
type=layer
y=10
width=20
height=36
widthmode=minus
xmode=abs_centre
ymode=abs_bottom
layer=universe

[button]
type=graphic
width=36
height=36
xmode=abs_right
ymode=abs_centre
layer=bottom
events=2
op1=*

[button_gfx]
type=graphic
x=4
width=29
height=22
xmode=abs_right
ymode=abs_centre
layer=bottom

[discard]
type=graphic
width=36
height=36
ymode=abs_centre
layer=bottom
events=2
op1=*

[discard_gfx]
type=graphic
x=3
width=29
height=22
ymode=abs_centre
layer=bottom
graphic="bankbuttons,6"

[info]
type=text
width=80
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=bottom
textfont=p12_full
textlineheight=15
textalignh=centre
textalignv=centre
textshadow=yes
colour=0xff981f

[fee]
type=text
width=80
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=bottom
hide=yes
textfont=p12_full
textlineheight=15
textalignh=centre
textalignv=centre
textshadow=yes
colour=0xff981f

