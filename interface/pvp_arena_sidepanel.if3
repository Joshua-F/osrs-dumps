[universe]
type=layer
width=184
height=237
xmode=abs_centre
ymode=abs_centre
onload=pvpa_sidepanel_init(event_com, pvp_arena_sidepanel:header, pvp_arena_sidepanel:groupname, pvp_arena_sidepanel:playerlist, pvp_arena_sidepanel:scrollbar, pvp_arena_sidepanel:hint, pvp_arena_sidepanel:left, pvp_arena_sidepanel:right, pvp_arena_sidepanel:worldhop)

[header]
type=text
height=20
widthmode=minus
xmode=abs_centre
layer=universe
textfont=b12_full
textalignh=centre
textalignv=centre
textshadow=yes
colour=0xff981f

[close]
type=layer
width=35
height=35
xmode=abs_right
layer=universe
events=2
op1=Close
onmouseover=graphic_swapper(pvp_arena_sidepanel:close_graphic, "v2_stone_close_button,1")
onmouseleave=graphic_swapper(pvp_arena_sidepanel:close_graphic, "v2_stone_close_button,0")
onop=opsound(event_op, 2)

[close_graphic]
type=graphic
x=3
y=2
width=16
height=16
xmode=abs_right
layer=close
graphic="v2_stone_close_button,0"

[groupname]
type=text
y=20
width=65
height=15
widthmode=minus
layer=universe
textfont=p11_full
textalignh=centre
textalignv=centre
textshadow=yes
colour=0xffb83f

[border]
type=layer
y=35
width=4
height=86
widthmode=minus
heightmode=minus
xmode=abs_centre
layer=universe
onload=stonebox(event_com, 0)

[com_6]
type=rectangle
width=6
height=6
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=border
colour=0x170801
fill=yes
trans=166

[contents]
type=layer
width=11
height=11
widthmode=minus
heightmode=minus
xmode=abs_centre
ymode=abs_centre
layer=border
onload=thinbox(event_com)

[playerlist]
type=layer
x=3
width=22
height=4
widthmode=minus
heightmode=minus
ymode=abs_centre
layer=contents

[worldhop]
type=layer
y=10
width=110
height=32
xmode=abs_centre
ymode=abs_bottom
layer=playerlist
hide=yes
events=2
op1=*

[scrollbar]
type=layer
x=2
width=16
height=4
heightmode=minus
xmode=abs_right
ymode=abs_centre
layer=contents

[hint]
type=text
y=34
height=17
widthmode=minus
ymode=abs_bottom
layer=universe
textfont=p11_full
textalignh=centre
textalignv=centre
textshadow=yes
colour=0xff981f

[left]
type=layer
x=10
y=2
width=80
height=32
ymode=abs_bottom
layer=universe
events=2
op1=*

[right]
type=layer
x=10
y=2
width=80
height=32
xmode=abs_right
ymode=abs_bottom
layer=universe
events=2
op1=*

