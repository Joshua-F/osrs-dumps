[proc,welcome_screen_lastlogin](component $component0)
if (%varplayer_261 <= 0) {
    if_settext("You last logged in <col=ff0000>earlier today</col>.", $component0);
} else if (%varplayer_261 = 1) {
    if_settext("You last logged in <col=ff0000>yesterday</col>.", $component0);
} else {
    if_settext("You last logged in <col=ff0000><~tostring_spacer(%varplayer_261, ",")> days ago</col>.", $component0);
}
