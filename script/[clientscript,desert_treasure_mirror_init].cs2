// 2528
[clientscript,desert_treasure_mirror_init](component $component0, component $component1, component $component2)
if_setmodeltransparent(true, $component1);
if_setmodelangle(0, 0, 480, 512, 0, 113, $component0);
if_setmodelangle(0, 0, 480, 512, 0, 113, $component1);
if (~on_mobile = true) {
    if_sethide(true, $component1);
    if_sethide(false, $component2);
} else {
    if_sethide(true, $component2);
    if_sethide(false, $component1);
}
