// 220
[proc,ntk_layout](component $component0, component $component1, component $component2)
if (getwindowmode = ^windowmode_resizable) {
    if_setposition(3, 0, ^setpos_abs_left, ^setpos_abs_top, $component1);
    if_setposition(0, 10, ^setpos_abs_centre, ^setpos_abs_top, $component2);
} else {
    if_setposition(6, 102, ^setpos_abs_right, ^setpos_abs_bottom, $component1);
    if_setposition(3, 35, ^setpos_abs_right, ^setpos_abs_bottom, $component2);
}
