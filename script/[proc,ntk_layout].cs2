// 220
[proc,ntk_layout](component $component0, component $component1, component $component2)
if (getwindowmode = ^windowmode_resizable) {
    if_setposition(3, 0, ^setposh_abs_left, ^setposv_abs_top, $component1);
    if_setposition(0, 10, ^setposh_abs_centre, ^setposv_abs_top, $component2);
} else {
    if_setposition(6, 102, ^setposh_abs_right, ^setposv_abs_bottom, $component1);
    if_setposition(3, 35, ^setposh_abs_right, ^setposv_abs_bottom, $component2);
}
