    if_sethide(true, $component1);
    cc_deleteall($component1);
    if_clearops($component1);
    if_setonmouserepeat(null, $component1);
    if_setonmouseleave(null, $component1);
    if_setonop(null, $component1);
    if_setontimer(null, $component1);
}
