// 7078
[clientscript,makeover_hover_item](component $component0, int $int1, boolean $boolean2)
if (cc_find($component0, $int1) = ^true & cc_find($component0, calc($int1 + 1)) = ^true) {
    if ($boolean2 = true) {
        cc_setcolour(^white);
    } else if (%makeover_current_selection = $int1) {
        cc_setcolour(0xff981f);
    } else {
        cc_setcolour(0x0e0e0c);
    }
}
