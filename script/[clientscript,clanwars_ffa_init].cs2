if_setsize($int2, 40, $component1);
if_setposition(calc((512 - $int2) / 2), 5, $component1);
cc_create($component1, ^iftype_graphic, 0);
cc_setposition(0, 0);
cc_setsize($int2, 40);
cc_setgraphic(tradebacking_dark);
