// 58
[clientscript,script58]
def_int $int0 = 0;
def_int $int1 = 0;
while ($int0 <= 1) {
    $int1 = ~area_task_complete($int0);
    if ($int1 = 2) {
        if_setcolour(^green, ~script55($int0));
    } else if ($int1 = 1) {
        if_setcolour(^yellow, ~script55($int0));
    } else {
        if_setcolour(^red, ~script55($int0));
    }
    $int0 = calc($int0 + 1);
}
