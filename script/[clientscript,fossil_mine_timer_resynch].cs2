// 2026
[clientscript,fossil_mine_timer_resynch](component $component0, component $component1)
if (%fossil_mine_progress_status >= 2) {
    if_settext("Time Remaining", $component1);
} else {
    if_settext("Starting in", $component1);
}
~fossil_mine_timer_resynch($component0, %fossil_mine_time_remaining, clientclock);
