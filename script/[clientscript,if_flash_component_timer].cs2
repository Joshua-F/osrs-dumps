// 2882
[clientscript,if_flash_component_timer](component $component0, int $int1, int $int2)
if ($int2 = 1) {
    $int1 = calc($int1 + 1);
} else {
    $int1 = calc($int1 - 1);
}
if ($int1 = 25 | $int1 = 0) {
    $int2 = calc(1 - $int2);
}
if_settrans(scale($int1, 25, 255), $component0);
if_setontimer("if_flash_component_timer($component0, $int1, $int2)", $component0);
