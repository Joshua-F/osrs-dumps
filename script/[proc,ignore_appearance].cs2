// 2507
[proc,ignore_appearance](component $component0, component $component1)
if (~on_mobile = true) {
    if_sethide(false, $component0);
    if_setsize(26, 26, ^setsize_abs, ^setsize_abs, $component0);
    if_setsize(20, 20, ^setsize_minus, ^setsize_abs, $component1);
} else {
    if_sethide(true, $component0);
    if_setsize(21, 21, ^setsize_abs, ^setsize_abs, $component0);
    if_setsize(0, 20, ^setsize_minus, ^setsize_abs, $component1);
}
