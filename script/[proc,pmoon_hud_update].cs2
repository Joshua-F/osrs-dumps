[proc,pmoon_hud_update]
if (%pmoon_boss_blue_dead = 1) {
    if_sethide(false, pmoon_hud:blue_check);
} else {
    if_sethide(true, pmoon_hud:blue_check);
}
if (%pmoon_boss_blood_dead = 1) {
    if_sethide(false, pmoon_hud:blood_check);
} else {
    if_sethide(true, pmoon_hud:blood_check);
}
if (%pmoon_boss_eclipse_dead = 1) {
    if_sethide(false, pmoon_hud:eclipse_check);
} else {
    if_sethide(true, pmoon_hud:eclipse_check);
}
