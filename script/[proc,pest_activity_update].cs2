// 1494
[proc,pest_activity_update]
if (%pest_activity_counter > 0) {
    cc_setcolour(0x9f00);
    .cc_setcolour(0x9f00);
    .cc_setposition(0, 0, ^setpos_abs_left, ^setpos_abs_centre);
    .cc_setsize(scale(%pest_activity_counter, 50, 16384), 0, ^setsize_proportion, ^setsize_minus);
} else {
    cc_setcolour(^red);
    .cc_setcolour(^red);
    .cc_setposition(0, 0, ^setpos_abs_centre, ^setpos_abs_centre);
    .cc_setsize(10, 1, ^setsize_abs, ^setsize_abs);
}
