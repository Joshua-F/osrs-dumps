// 6613
[proc,toa_lobby_update_header](component $component0)
if (%toa_client_partystatus = 2) {
    if_settext("Step Inside Now!", $component0);
    if_setcolour(~tob_hud_nameflasher, $component0);
    if_setontimer("toa_hud_nameflasher($component0)", $component0);
} else if (%toa_client_partystatus = 0) {
    if_settext("No Party", $component0);
    if_setcolour(0xff981f, $component0);
    if_setontimer(null, $component0);
} else {
    if_settext("Party", $component0);
    if_setcolour(0xff981f, $component0);
    if_setontimer(null, $component0);
}
