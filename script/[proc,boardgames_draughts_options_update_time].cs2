if_setgraphic($graphic1, boardgames_draughts_options:15seconds_radio);
if_setgraphic($graphic1, boardgames_draughts_options:30seconds_radio);
if_setgraphic($graphic1, boardgames_draughts_options:1minute_radio);
if_setgraphic($graphic1, boardgames_draughts_options:2minutes_radio);
if (~on_mobile = false) {
    if_setonmouserepeat("settrans(boardgames_draughts_options:15seconds_radio, 127)", boardgames_draughts_options:15seconds);
    if_setonmouseleave("settrans(boardgames_draughts_options:15seconds_radio, 0)", boardgames_draughts_options:15seconds);
    if_setonmouserepeat("settrans(boardgames_draughts_options:30seconds_radio, 127)", boardgames_draughts_options:30seconds);
