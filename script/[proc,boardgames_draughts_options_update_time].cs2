    if_setonmouseleave("settrans(boardgames_draughts_options:1minute_radio, 0)", boardgames_draughts_options:1minute);
    if_setonmouserepeat("settrans(boardgames_draughts_options:2minutes_radio, 127)", boardgames_draughts_options:2minutes);
    if_setonmouseleave("settrans(boardgames_draughts_options:2minutes_radio, 0)", boardgames_draughts_options:2minutes);
}
switch_int ($int0) {
    case 0 :
        if_setgraphic($graphic2, boardgames_draughts_options:15seconds_radio);
    case 1 :
        if_setgraphic($graphic2, boardgames_draughts_options:30seconds_radio);
    case 2 :
        if_setgraphic($graphic2, boardgames_draughts_options:1minute_radio);
    case 3 :
        if_setgraphic($graphic2, boardgames_draughts_options:2minutes_radio);
}
